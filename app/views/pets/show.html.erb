<nav>
  <a href='/shelters'>Shelters Index</a>
  <a href='/pets'>Pets Index</a>
</nav>
<header>
  <h1>Details For <%= @pet.name %></h1>
</header>
<img src="<%= @pet.image %>"/>
<div class="pet-info">
<h1>Name: <%= @pet.name %></h1>
<p>
  Description: <%= @pet.description %><br/>
  Approximate Age: <%= @pet.approximate_age %><br/>
  Sex: <%= @pet.sex %><br/>
  Adoption Status: <%= @pet.adoption_status %><br/>
  <a href="/pets/<%= @pet.id %>/edit">Update Pet</a>
</p>
</div>
<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Pet"/>
</form>
