<nav>
  <%= link_to 'Shelters Index', '/shelters' %>
  <%= link_to 'Pets Index', '/pets' %>
</nav>
<h1><%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %> Pets</h1>

<% @shelter.pets.each do |pet| %>
  <img src="<%= pet.image %>"/>
  <p>
  <%= link_to "#{pet.name}", "/pets/#{pet.id}" %><br/>
    <%= pet.approximate_age %><br/>
    <%= pet.sex %><br/>
    <%= link_to "Edit Info", "/pets/#{pet.id}/edit" %>
    <%= button_to "Delete #{pet.name}", delete_pet_path(pet.id), method: :delete %>
  </p>
<% end %>
<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %>
