<form action='/shelters/<%= @shelter.id %>' method='post'>
  <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
  <input type='hidden' name='_method' value='PATCH' />
  <p>Edit Details for <%= @shelter.name %></p>
  <input type='text' name='new_name' value='<%= @shelter.name %>'<br/>
  <input type='text' name='new_address' value='<%= @shelter.address %>'<br/>
  <input type='text' name='new_city' value='<%= @shelter.city %>'<br/>
  <input type='text' name='new_state' value='<%= @shelter.state %>'<br/>
  <input type='text' name='new_zip' value='<%= @shelter.zip %>'<br/>
  <button type='submit'>Update</button>
</form>
